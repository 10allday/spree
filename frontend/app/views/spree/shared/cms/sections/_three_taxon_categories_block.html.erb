<!-- Left Block -->
<div class="col-6">

  <!-- Top Left Block SQUARE -->
  <% if section.permalink_one.present? %>

    <!-- margin-bottom: 3.7% is important for keeping the bottom of the sections aligned -->
    <div class="row" style="margin-bottom: 3.7%;">
      <div class="col-12">

        <%= link_to spree.nested_taxons_path(section.permalink_one), class: 'homepage-taxon-box' do %>
          <% if section.image_one.attached? && section.image_one.variable? %>
            <!-- XS to MD -->
            <div class="d-md-none" style="--aspect-ratio:18/13;">
              <img class="d-md-none lazyload"
                data-src="<%= main_app.url_for(section.image_one.attachment.variant(resize: '270x195>')) %>"
                data-srcset="<%= main_app.url_for(section.image_one.attachment.variant(resize: '270x195>')) %>"
                alt="<%= section&.title_one %>">
            </div>

            <!-- MD to XL -->
            <div class="d-none d-md-block d-xl-none" style="--aspect-ratio:18/13;">
              <img class="lazyload"
                data-src="<%= main_app.url_for(section.image_one.attachment.variant(resize: '540x390>')) %>"
                data-srcset="<%= main_app.url_for(section.image_one.attachment.variant(resize: '540x390>')) %>"
                alt="<%= section&.title_one %>">
            </div>

            <!-- XL UP -->
            <div class="d-none d-xl-block" style="--aspect-ratio:18/13;">
              <img class="lazyload"
                data-src="<%= main_app.url_for(section.image_one.attachment.variant(resize: '1080x780>')) %>"
                data-srcset="<%= main_app.url_for(section.image_one.attachment.variant(resize: '1080x780>')) %>"
                alt="<%= section&.title_one %>">
            </div>
          <% else %>
            <div style="--aspect-ratio:18/13;">
              <%= icon( name: 'card-image',
                classes: 'homepage-taxon-box text-black-50',
                width: 26,
                height: 26) %>
            </div>
          <% end %>
          <div class="homepage-taxon-box-text" aria-label="<%= section&.title_one %>">
            <h3 class="homepage-hpb"><%= section&.title_one %></h3>
          </div>
        <% end %>

      </div>
    </div>
  <% end %>

  <!-- Bottom Left Block SQUARE -->
  <% if section.permalink_three.present? %>
    <div class="row">
      <div class="col-12">

        <%= link_to spree.nested_taxons_path(section.permalink_three), class: 'homepage-taxon-box' do %>
          <% if section.image_three.attached? && section.image_three.variable? %>
            <!-- XS to MD -->
            <div class="d-md-none" style="--aspect-ratio:18/13;">
              <img class="d-md-none lazyload"
                data-src="<%= main_app.url_for(section.image_three.attachment.variant(resize: '270x195>')) %>"
                data-srcset="<%= main_app.url_for(section.image_three.attachment.variant(resize: '270x195>')) %>"
                alt="<%= section&.title_three %>">
            </div>

            <!-- MD to XL -->
            <div class="d-none d-md-block d-xl-none" style="--aspect-ratio:18/13;">
              <img class="lazyload"
                data-src="<%= main_app.url_for(section.image_three.attachment.variant(resize: '540x390>')) %>"
                data-srcset="<%= main_app.url_for(section.image_three.attachment.variant(resize: '540x390>')) %>"
                alt="<%= section&.title_three %>">
            </div>

            <!-- XL UP -->
            <div class="d-none d-xl-block" style="--aspect-ratio:18/13;">
              <img class="lazyload"
                data-src="<%= main_app.url_for(section.image_three.attachment.variant(resize: '1080x780>')) %>"
                data-srcset="<%= main_app.url_for(section.image_three.attachment.variant(resize: '1080x780>')) %>"
                alt="<%= section&.title_three %>">
            </div>
          <% else %>
            <div style="--aspect-ratio:18/13;">
               <%= icon( name: 'card-image',
                classes: 'homepage-taxon-box text-black-50',
                width: 26,
                height: 26) %>
            </div>
          <% end %>
          <div class="homepage-taxon-box-text" aria-label="<%= section&.title_three %>">
            <h3 class="homepage-hpb"><%= section&.title_three %></h3>
          </div>
        <% end %>

      </div>
    </div>
  <% end %>
</div>

