<div class="container-fluid plp-filter-and-sort-horizontal-border d-lg-none mb-3">
  <div class="row">
    <div class="col-6 plp-filter-and-sort-vertical-border" data-controller="reveal" data-reveal-hidden-class="d-none">
      <div class="plp-filter-and-sort-buttons" data-action="click->reveal#show">
        <%= Spree.t('plp.filter_by') %>
        <%= inline_svg_tag 'arrow-right.svg', class: "plp-icon" %>
      </div>
      <%= render 'spree/products/filters_mobile' %>
    </div>
    <div class="col-6" data-controller="reveal" data-reveal-hidden-class="d-none">
      <div class="plp-filter-and-sort-buttons" data-action="click->reveal#show">
        <%= Spree.t("plp.#{ params[:sort_by].blank? ? 'sort_by': params[:sort_by].gsub('-', '_') }") %>
        <%= inline_svg_tag 'arrow-right.svg', class: "plp-icon" %>
      </div>
      <%= render 'spree/products/sort_mobile' %>
    </div>
  </div>
</div>
