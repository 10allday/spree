<%= f.field_container :linked_resource_id, class: ['form-group'] do %>
  <%= f.label :linked_resource_id, Spree.t('taxon') %>
  <%= f.select :linked_resource_id, options_from_collection_for_select(@taxons, :id, :pretty_name, @menu_item.linked_resource_id), {include_blank: true}, multiple: false, class: 'select2-clear' %>
  <%= f.error_message_on :linked_resource_id %>
  <small class="form-text text-muted"><%= menu_item_link_to(@menu_item) %></small>
<% end %>
