<div data-hook="admin_menu_item_form_fields">
  <div class="row">
    <div class="col-12 col-md-6">
      <div class="card mb-3">
        <div class="card-header">
          <h5 class="mb-0"><%= Spree.t('admin.navigation.menu_item_type') %></h5>
        </div>
        <div class="card-body">
          <%= f.field_container :item_type, class: ['form-group'] do %>
            <%= f.label :item_type, Spree.t('admin.navigation.item_type') %>
            <%= f.select(:item_type, Spree::MenuItem::ITEM_TYPE, {include_blank: false}, { class: 'select2' }) %>
            <%= f.error_message_on :item_type %>
          <% end %>

          <div class="alert alert-info mt-3 mb-0">
          <%= raw Spree.t('admin.navigation.menu_item_type_message') %>
         </div>

         <hr>
         <%= f.select :parent_id, nested_set_options(Spree::MenuItem, @menu_item) {|i| "#{'-' * i.level} #{i.name}" }, {include_blank: true}, {class: 'select2-clear'} %>
        </div>
      </div>
    </div>

    <div class="col-12 col-md-6">
      <div class="card mb-3">
        <div class="card-header">
          <h5 class="mb-0"><%= Spree.t('admin.navigation.menu_item_basic_details') %></h5>
        </div>
        <div class="card-body">
          <%= f.field_container :name, class: ['form-group'] do %>
            <%= f.label :name, raw(Spree.t(:name) + required_span_tag) %>
            <%= f.text_field :name, class: 'form-control', required: true %>
            <%= f.error_message_on :name %>
          <% end %>

          <%= f.field_container :subtitle, class: ['form-group'] do %>
            <%= f.label :subtitle, Spree.t('admin.navigation.subtitle') %>
            <%= f.text_field :subtitle, class: 'form-control' %>
            <%= f.error_message_on :subtitle %>
          <% end %>

          <%= f.field_container :image_asset, class: ['form-group'] do %>
            <% if @menu_item.image_asset.attached? && @menu_item.image_asset.variable? %>
              <%= image_tag main_app.url_for(@menu_item.image_asset.variant(resize: '244x104>')) %>
            <% elsif @menu_item.image_asset.attached? && @store.image_asset.image? %>
              <%= image_tag main_app.url_for(@menu_item.image_asset) %>
            <% end %>
            <%= f.field_container :image_asset, class: ['form-group'] do %>
              <%= f.label :image_asset, Spree.t(:image_asset) %><br>
              <%= f.file_field :image_asset %>
              <%= f.error_message_on :image_asset %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="card mb-3">
        <div class="card-header">
          <h5 class="mb-0"><%= Spree.t('admin.navigation.link_settings') %></h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-6">
              <%= f.field_container :linked_resource_type, class: ['form-group'] do %>
                <%= f.label :linked_resource_type, Spree.t('admin.navigation.link_to') %>
                <%= f.select(:linked_resource_type, Spree::MenuItem::LINKED_RESOURCE_TYPE, {include_blank: false}, { class: 'selec2', id: 'LinkToSelect2' }) %>
                <%= f.error_message_on :linked_resource_type %>
              <% end %>
            </div>
            <div class="col-6">

              <%= render 'link_input', linked_resource: @menu_item.linked_resource_type, f: f %>

              <div id="alertToClickUpdate" class="d-none">
                <div class="alert alert-warning mt-3">
                  Click update to load your new link
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
