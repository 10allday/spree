<%= f.field_container :content, class: ['form-group'] do %>
  <%= f.text_area :content, { rows: "20", class: 'form-control' } %>
  <%= f.error_message_on :content %>
<% end %>

<script type="text/javascript">
  tinymce.init({
    selector: "#cms_section_content",
    plugins: [
      "image table paste code",
    ],
    menubar: false,
    toolbar:
      "undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image | code ",
  });
</script>
