<div class="row">
  <div class="col-12 col-md-4">
    <%= f.field_container :title, class: ['form-group'] do %>
      <%= f.label :title, Spree.t(:title) %>
      <%= f.text_field :title, class: 'form-control' %>
      <%= f.error_message_on :title %>
    <% end %>

    <%= f.field_container :subtitle, class: ['form-group'] do %>
      <%= f.label :subtitle, Spree.t(:subtitle) %>
      <%= f.text_field :subtitle, class: 'form-control' %>
      <%= f.error_message_on :subtitle %>
    <% end %>

    <%= f.field_container :button_text, class: ['form-group'] do %>
      <%= f.label :button_text, Spree.t(:button_text) %>
      <%= f.text_field :button_text, class: 'form-control' %>
      <%= f.error_message_on :button_text %>
    <% end %>

    <div class="row">
      <%= f.field_container :width, class: ['form-group col-6'] do %>
        <%= f.label :width, Spree.t('admin.navigation.width') %>
        <%= f.select(:width, @cms_section.widths, {include_blank: false}, class: 'select2') %>
        <%= f.error_message_on :width %>
      <% end %>

      <%= f.field_container :boundary, class: ['form-group col-6'] do %>
        <%= f.label :boundary, Spree.t('admin.navigation.boundary') %>
        <%= f.select(:boundary, @cms_section.boundaries, {include_blank: false}, class: 'select2') %>
        <%= f.error_message_on :boundary %>
      <% end %>
    </div>
  </div>
  <div class="col-12 col-md-8">
    <%= f.field_container :content, class: ['form-group'] do %>
      <%= f.label :width, Spree.t('content') %>
      <%= f.text_area :content, { rows: "20", class: 'form-control spree-rte' } %>
      <%= f.error_message_on :content %>
    <% end %>
  </div>
  <div class="col-12"><hr></div>
  <div class="col-12 col-md-6">
    <%= f.field_container :linked_resource_type, class: ['form-group'] do %>
      <%= f.label :linked_resource_type, Spree.t('admin.navigation.link_to') %>
      <%= f.select(:linked_resource_type,
          spree_humanize_dropdown_values('Spree::Cms::Sections::FeaturedArticle',
                                          { const: 'LINKED_RESOURCE_TYPE' }),
                                          {include_blank: false},
                                          class: 'link_switcher') %>
      <%= f.error_message_on :linked_resource_type %>
    <% end %>
  </div>
  <div class="col-12 col-md-6">
      <%= render "spree/admin/shared/link_fields", resource: @cms_section, f: f %>
  </div>
</div>
