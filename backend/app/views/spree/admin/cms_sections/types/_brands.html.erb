<div class="row">
  <div class="col-12 col-md-6">
    <%= f.field_container :title, class: ['form-group'] do %>
      <%= f.label :title, Spree.t(:title) %>
      <%= f.text_field :title, class: 'form-control' %>
      <%= f.error_message_on :title %>
    <% end %>

    <%= f.field_container :subtitle, class: ['form-group'] do %>
      <%= f.label :subtitle, Spree.t(:subtitle) %>
      <%= f.text_field :subtitle, class: 'form-control' %>
      <%= f.error_message_on :subtitle %>
    <% end %>

    <%= f.field_container :fit, class: ['form-group'] do %>
      <%= f.label :fit, Spree.t('admin.cms.fit') %>
      <%= f.select(:fit, @cms_section.boundaries, {include_blank: false}, class: 'select2') %>
      <%= f.error_message_on :fit %>
    <% end %>
  </div>
  <div class="col-6">
    <div class="alert alert-info mt-4">
      Create a Branding Menu with the following settings
    </div>
          <span class="badge badge-secondary mx-2">
          <%= svg_icon name: "store.svg", width: '18', height: '18' %> <%= @cms_section.cms_page.store.unique_name %>
      </span>
      <span class="badge badge-secondary">
        <%= svg_icon name: "translate.svg", width: '18', height: '18' %> <%= locale_full_name(@cms_section.cms_page.locale) %>
      </span>
  </div>
</div>
