<div class="row" data-hook="admin_menu_item_form_fields">
  <div class="col-6">
     <%= f.field_container :name, class: ['form-group'] do %>
       <%= f.label :name, raw(Spree.t(:name) + required_span_tag) %>
       <%= f.text_field :name, class: 'form-control', required: true %>
       <%= f.error_message_on :name %>
     <% end %>

     <%= f.field_container :kind, class: ['form-group'] do %>
       <%= f.label :kind, Spree.t('admin.navigation.item_type') %>
       <%= f.select(:kind, @menu_item_types, {include_blank: false}) %>
       <%= f.error_message_on :kind %>
     <% end %>

    <%= f.field_container :content, class: ['form-group'] do %>
      <%= f.text_area :content, { rows: "20", class: 'form-control' } %>
      <%= f.error_message_on :content %>
    <% end %>
  </div>

  <div class="col-6">
    <%= @cms_section.content.html_safe %>
  </div>
</div>

<script type="text/javascript">
  tinymce.init({
    selector: "#cms_section_content",
    plugins: [
      "image table paste code",
    ],
    menubar: false,
    toolbar:
      "undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image | code ",
  });
</script>
