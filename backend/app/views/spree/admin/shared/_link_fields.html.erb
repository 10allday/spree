<% if resource.linked_resource_type.present? %>
  <div data-panel-type="<%= resource.linked_resource_type %>" data-panel-id="menu_item_link">
    <%= render "spree/admin/shared/linkables/#{spree_class_name_as_path(resource.linked_resource_type)}", resource: resource, f: f %>
  </div>
<% end %>

<div class="d-none" data-target-message-pannel="menu_item_link">
  <div class="alert alert-warning mt-3">
    <% if %w[new create].include? controller.action_name %>
      <%= raw Spree.t('admin.navigation.click_create_to_load_new_link') %>
    <% else %>
      <%= raw Spree.t('admin.navigation.click_update_to_load_new_link') %>
    <% end %>
  </div>
</div>
