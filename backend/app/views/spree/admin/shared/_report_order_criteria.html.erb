<%= search_form_for @search, url: spree.sales_total_admin_reports_path  do |s| %>
<div class="form-group date-range-filter">
  <%= label_tag nil, Spree.t(:date_range) %>
  <div class="date-range-filter row">
    <div class="col-md-6">
      <div class="input-group datepickrFrom">
        <%= s.text_field :completed_at_gt, class: 'form-control shadow-none', placeholder: Spree.t(:starting_from), value: datepicker_field_value(params[:q][:completed_at_gt]), 'data-input':'' %>
        <div class="input-group-append append_over">
          <span class="input-group-text force-round" data-clear>
            <%= svg_icon name: "close.svg", width: '16', height: '16' %>
          </span>
        </div>
        <div class="input-group-append append_under">
          <span class="input-group-text" data-clear>
            <%= svg_icon name: "calendar.svg", width: '16', height: '16' %>
          </span>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="input-group datepickrTo">
        <%= s.text_field :completed_at_lt, class: 'form-control shadow-none', placeholder: Spree.t(:ending_at), value: datepicker_field_value(params[:q][:completed_at_lt]), 'data-input':'' %>

        <div class="input-group-append append_over">
          <span class="input-group-text force-round" data-clear>
            <%= svg_icon name: "close.svg", width: '16', height: '16' %>
          </span>
        </div>
        <div class="input-group-append append_under">
          <span class="input-group-text" data-clear>
            <%= svg_icon name: "calendar.svg", width: '16', height: '16' %>
          </span>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="form-actions">
  <%= button Spree.t(:search), 'search.svg' %>
</div>
<% end %>
