<% if content_for?(:page_title) || content_for?(:page_actions) %>
  <div id="contentHeader" class="content-header <%= "with-page-tabs" if content_for?(:page_tabs) %> page-header">
    <div class="row align-items-center  <%= if content_for?(:page_tabs) then "pb-0" else "border-bottom" end %> mb-4">
      <% if content_for?(:page_title) %>
        <h1 class="h4 pl-0 mb-0 col-12 col-lg-<%= content_for?(:page_actions) ? '7' : '12'  %>">
          <%= yield :page_title %>
          <% if content_for?(:page_title_small) %>
            <small><%= yield :page_title_small %></small>
          <% end %>
        </h1>
      <% end %>

      <% if content_for?(:page_actions) %>
        <div class="page-actions col-5 pr-0 d-none d-lg-block" data-hook="toolbar">
          <%= yield :page_actions %>
        </div>
      <% end %>

      <% if content_for?(:page_tabs) %>
        <ul class="nav nav-tabs w-100 mt-4">
          <%= yield :page_tabs %>
        </ul>
      <% end %>
    </div>
  </div>
<% end %>
