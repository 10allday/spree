<div class="<%= width %>" data-section-id="<%= section.id %>">
  <div class="row m-0 mb-3 py-3 border bg-white">
    <div class="col move-handle d-flex flex-nowrap">

      <div class="d-flex align-items-center overflow-hidden w-100">
        <div>
          <h5 class="mb-0"><%= section.name %></h5>
          <small class="form-text text-muted mt-0">Type: <%= section.type %></small>
        </div>

        <div class="ml-4 pl-4 v-seperator">
          <% if section.icon.present? %>
            <div class="cms_section_preview_image_holder">
              <%= image_tag main_app.url_for(section.icon.attachment) %>
            </div>
          <% end %>
          </div>
        </div>
      </div>

    <div class="col d-flex align-items-center pl-0 actions cms_section_action_col">
      <div>
        <%= link_to_edit(section, no_text: true, url: spree.edit_admin_cms_page_cms_section_path(@cms_page, section)) %>
        <%= link_to_delete(section, no_text: true, url: spree.admin_cms_page_cms_section_path(@cms_page, section)) if can?(:destroy, section) %>
      </div>
    </div>
  </div>
</div>
